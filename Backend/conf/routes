## Driver
#

#
# ~ Create a new Driver ~
POST          /driver/addNew                            @controllers.DriverController.addNewDriver()

#
# ~ Edit Driver ~
PUT           /driver/edit/:driverID                    @controllers.DriverController.editDriver(driverID: Integer)

#
# ~ Delete Driver ~
DELETE        /driver/delete/:driverID                  @controllers.DriverController.deleteDriver(driverID: Integer)

#
# ~ Get Driver by ID ~
GET           /driver/getDriverByID/:driverID              @controllers.DriverController.getDriverByID(driverID: Integer)

#
# ~ Get Bus by ID ~
GET           /driver/getBusByID/:busID              @controllers.DriverController.getBusbyId(busID: Integer)

#
# ~ Login Driver ~
GET           /driver/login                             @controllers.DriverController.loginDriver()

#
# ~ Get Ride by ID ~
GET           /driver/getRideByID/:rideID              @controllers.DriverController.getRideByID(rideID: Integer)


#
# ~ Start Ride ~
#POST          /driver/startRide                         @controllers.DriverController.startRideDriver()
#// Return ride ID

#
# ~ Update Speed ~
#PUT           /driver/updateSpeed/:rideID/:speed        @controllers.DriverController.updateSpeed(rideID: Integer, speed: String)

#
# ~ Update Location ~
#PUT           /driver/updateLocation/:rideID/:location  @controllers.DriverController.updateLocation(rideID: Integer, location: String )

#
# ~ Update no of people ~
#PUT           /driver/updateNoOfPeople/:rideID/:noOfPeople  @controllers.DriverController.updateNoOfPeople(rideID: Integer, noOfPeople: String )


# ~ Show Driver rating ~
#GET           /driver/getRating/:driverID               @controllers.DriverController.showRatingOfTheDriver(driverID: Integer)
